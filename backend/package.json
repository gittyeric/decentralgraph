{
  "name": "decentralgraph",
  "version": "0.1.0",
  "description": "Decentralgraph backend services",
  "scripts": {
    "core": "NODE_ENV=prod forever start -v -c ts-node src/run-core-init.ts",
    "connect": "NODE_ENV=prod ts-node src/connect.ts",
    "hax:prod": "NODE_ENV=prod node --expose-gc -r ts-node/register src/run-core-hax.ts",
    "bridge:prod": "NODE_ENV=prod node -r ts-node/register src/run-bridge.ts",
    "bridge:dev": "NODE_ENV=prod nodemon src/run-bridge.ts",
    "core:prod": "NODE_ENV=prod node --expose-gc -r ts-node/register src/run-core-init.ts",
    "core:dev": "NODE_ENV=dev nodemon src/run-core-init.ts",
    "edge:prod": "NODE_ENV=prod ts-node src/run-edge.ts",
    "edge:dev": "NODE_ENV=dev nodemon src/run-edge.ts",
    "deploy": "sh scripts/fast-deploy-core.sh",
    "test": "NODE_ENV=dev rm -rf dist && jest",
    "test:dev": "NODE_ENV=dev jest",
    "build": "./node_modules/typescript/bin/tsc",
    "build:dev": "tsc -w"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@redis/bloom": "^1.0.2",
    "bloom-filters": "^3.0.0",
    "cors": "^2.8.5",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^5.7.2",
    "express": "^4.18.1",
    "hash.js": "^1.1.7",
    "lmdb": "^2.6.8",
    "lmdbx": "^0.5.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.iserror": "^3.1.1",
    "lru-cache": "^7.10.1",
    "memoizee": "^0.4.15",
    "power-radix-encodings": "^1.1.0",
    "puppeteer": "^19.0.0",
    "random-seed": "^0.3.0",
    "redis": "^4.1.0",
    "redis-modules-sdk": "^1.2.6",
    "shuffle-array": "^1.0.1",
    "socket-generator": "^1.1.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "string-hash": "^1.1.3",
    "tiny-typed-emitter": "^2.1.0",
    "ts-node": "^10.8.1",
    "unique-names-generator": "^4.7.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
