    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Frontend Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/frontend/node_modules/.bin/react-scripts",
            "args": [
                "test",
                "--runInBand",
                "--no-cache",
                "--watchAll=false"
            ],
            "cwd": "${workspaceRoot}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "CI": "true"
            },
        }
    ]
}